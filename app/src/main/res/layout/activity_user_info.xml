<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_tab_menu"
    tools:context=".activity.UserInfoActivity">

    <RelativeLayout
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/user_info_back"
            android:src="@drawable/return_ico"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_centerInParent="true"
            android:textColor="@color/color_black"
            android:textSize="@dimen/textSize_18"
            android:text="@string/person_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/user_info_save"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="@string/save"
            android:textColor="@color/live_textColor"
            android:textSize="@dimen/textSize_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:background="@color/color_white"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:layout_marginStart="10dp"
            android:layout_alignParentStart="true"
            android:text="@string/head_tv"
            android:layout_centerVertical="true"
            android:textColor="@color/color_black"
            android:textSize="@dimen/textSize_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginEnd="10dp"
            android:id="@+id/user_info_head"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_width="70dp"
            android:layout_height="70dp" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/color_white"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:textSize="@dimen/textSize_16"
                android:textColor="@color/color_black"
                android:layout_centerVertical="true"
                android:text="@string/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:background="@null"
                android:id="@+id/user_info_name"
                android:layout_alignParentEnd="true"
                android:textSize="@dimen/textSize_16"
                android:textColor="@color/color_black_gray"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@color/color_line"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"/>
        <RelativeLayout
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:textSize="@dimen/textSize_16"
                android:textColor="@color/color_black"
                android:layout_centerVertical="true"
                android:text="@string/user_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <!--默认男-->
            <Switch
                android:showText="true"
                android:textOn="@string/sex_female"
                android:textOff="@string/sex_man"
                android:id="@+id/user_info_switch"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <View
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@color/color_line"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"/>
        <RelativeLayout
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:textSize="@dimen/textSize_16"
                android:textColor="@color/color_black"
                android:layout_centerVertical="true"
                android:text="@string/user_work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:ellipsize="end"
                android:maxLength="18"
                android:maxLines="1"
                android:id="@+id/user_info_work"
                android:layout_alignParentEnd="true"
                android:textSize="@dimen/textSize_16"
                android:textColor="@color/color_black_gray"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="@color/color_white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:textColor="@color/color_black"
                android:textSize="@dimen/textSize_16"
                android:layout_centerVertical="true"
                android:text="@string/user_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <View
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@color/color_line"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"/>
        <EditText
            android:gravity="top"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:maxLength="50"
            android:maxLines="4"
            android:id="@+id/user_info_sign_edit"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="65dp" />

    </LinearLayout>


</LinearLayout>
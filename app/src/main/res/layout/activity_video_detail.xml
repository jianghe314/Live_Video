<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.VideoDetailActivity">

    <RelativeLayout
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/video_detail_back"
            android:layout_alignParentStart="true"
            android:src="@drawable/return_ico"
            android:layout_width="40dp"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/color_black_gray"
            android:textSize="@dimen/textSize_16"
            android:text="@string/video_detail"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/video_share"
            android:layout_alignParentEnd="true"
            android:src="@drawable/share"
            android:layout_width="40dp"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <!--视频播放-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <ybolo.szreach.com.live_vod.player.YboloPlayer
            app:yboloPlayer_isLive="false"
            app:yboloPlayer_hintSize="4sp"
            app:yboloPlayer_timeSize="4dp"
            app:yboloPlayer_btnSize="18dp"
            app:yboloPlayer_timeColor="@color/color_white"
            android:id="@+id/ybolo_player_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ybolo.szreach.com.live_vod.player.YboloPlayer>

    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <RelativeLayout
                android:id="@+id/video_fragment_intro_container"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/video_detail_intro"
                    android:textColor="@color/color_black_gray"
                    android:textSize="@dimen/textSize_16"
                    android:layout_centerInParent="true"
                    android:text="@string/introduce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/video_fragment_remark_container"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/video_detail_evalu"
                    android:textColor="@color/color_black_gray"
                    android:textSize="@dimen/textSize_16"
                    android:layout_centerInParent="true"
                    android:text="@string/evalution"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </LinearLayout>
        <View
            android:background="@color/color_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </LinearLayout>
    <!--简介与评论-->
    <FrameLayout
        android:id="@+id/video_fragment_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

</LinearLayout>
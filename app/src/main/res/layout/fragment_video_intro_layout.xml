<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:maxLength="20"
            android:id="@+id/video_detail_title"
            android:layout_marginTop="20dp"
            android:textColor="@color/color_black"
            android:textSize="@dimen/textSize_16"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_below="@+id/video_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_centerVertical="true"
                android:maxLength="20"
                android:id="@+id/video_detail_time"
                android:layout_marginTop="10dp"
                android:textColor="@color/color_time"
                android:textSize="@dimen/textSize_12"
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_marginEnd="5dp"
                android:layout_toStartOf="@+id/video_detail_person"
                android:layout_centerVertical="true"
                android:src="@drawable/person_on"
                android:layout_width="12dp"
                android:layout_height="12dp" />

            <TextView
                android:id="@+id/video_detail_person"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/textSize_12"
                android:textColor="@color/color_black_gray"
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>


    </RelativeLayout>
    <View
        android:background="@color/color_line"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"/>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/video_detail_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:background="@color/live_textColor"
                android:layout_width="3dp"
                android:layout_height="20dp"/>

            <TextView
                android:layout_marginStart="10dp"
                android:maxLength="20"
                android:text="@string/video_detail_describe"
                android:textColor="@color/color_black"
                android:textSize="@dimen/textSize_16"
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/video_detail_describe"
            android:gravity="top"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/video_detail_tag"
            android:textColor="@color/color_black_gray"
            android:textSize="@dimen/textSize_14"
            android:maxLines="20"
            android:maxLength="80"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>
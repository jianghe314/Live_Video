<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_tab_menu">

    <RelativeLayout
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_centerInParent="true"
            android:textColor="@color/color_black"
            android:textSize="@dimen/textSize_18"
            android:text="@string/setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


    <RelativeLayout
        android:clickable="true"
        android:background="@drawable/click_bg"
        android:id="@+id/mefragment_head_container1"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/mefragment_head_iv"
            android:layout_alignParentStart="true"
            android:scaleType="fitXY"
            android:layout_marginStart="15dp"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <TextView
            android:layout_centerVertical="true"
            android:textColor="@color/color_black"
            android:textSize="@dimen/textSize_16"
            android:layout_marginStart="25dp"
            android:layout_toEndOf="@+id/mefragment_head_iv"
            android:id="@+id/mefragment_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/icon_right"
            android:layout_alignParentEnd="true"
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:clickable="true"
        android:background="@drawable/click_bg"
        android:id="@+id/mefragment_head_container2"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_centerVertical="true"
            android:text="@string/psd_setting"
            android:textColor="@color/color_black"
            android:textSize="@dimen/textSize_16"
            android:layout_marginStart="25dp"
            android:id="@+id/mefragment_setting_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/icon_right"
            android:layout_alignParentEnd="true"
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:clickable="true"
        android:background="@drawable/click_bg"
        android:id="@+id/mefragment_head_container3"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:textSize="@dimen/textSize_16"
            android:textStyle="bold"
            android:textColor="@color/live_textColor"
            android:layout_centerInParent="true"
            android:text="@string/login_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>



</LinearLayout>
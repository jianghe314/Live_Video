<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:layout_margin="7dp">

    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/item_live_list_iv"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <RelativeLayout
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:ellipsize="end"
            android:maxLength="16"
            android:maxLines="1"
            android:id="@+id/item_live_list_title"
            android:layout_centerVertical="true"
            android:textColor="@color/color_black"
            android:textSize="@dimen/textSize_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/item_live_list_tag"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/live_red"
            android:layout_width="12dp"
            android:layout_height="12dp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_live_list_time"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/color_time"
            android:textSize="@dimen/textSize_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <ImageView
            android:layout_marginEnd="3dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/item_live_list_person"
            android:src="@drawable/person_on"
            android:layout_width="12dp"
            android:layout_height="12dp" />

        <TextView
            android:textColor="@color/color_black"
            android:id="@+id/item_live_list_person"
            android:layout_centerVertical="true"
            android:textSize="@dimen/textSize_12"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:layout_margin="3dp">

    <ImageView
        android:id="@+id/item_video_list_iv"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="80dp" />

    <TextView
        android:id="@+id/item_video_list_title"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginTop="8dp"
        android:textColor="@color/color_black"
        android:textSize="@dimen/textSize_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:paddingEnd="2dp"
        android:paddingStart="2dp"
        android:layout_marginTop="3dp"
        android:layout_width="wrap_content"
        android:layout_height="20dp">

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/item_video_list_source"
            android:textSize="@dimen/textSize_10"
            android:textColor="@color/color_text_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginEnd="3dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/item_video_list_person"
            android:src="@drawable/person_on"
            android:layout_width="10dp"
            android:layout_height="10dp" />

        <TextView
            android:textColor="@color/color_black"
            android:id="@+id/item_video_list_person"
            android:layout_centerVertical="true"
            android:textSize="@dimen/textSize_10"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>





</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@drawable/page_bg"
       android:id="@+id/live_list_page"
       android:orientation="horizontal"
       >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="37"
        android:background="#061323"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/live_list_title"
                android:text="@string/live_list_title"
                android:textSize="@dimen/x12"
                android:letterSpacing="-0.06"
                android:textColor="#ffffff"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/x10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/live_list_count"
                android:text="共计0场直播"
                android:textSize="@dimen/x6"
                android:letterSpacing="-0.06"
                android:textColor="#0091ff"
                android:layout_marginLeft="@dimen/x5"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="35"
            android:paddingTop="20px"
            android:orientation="vertical"
            >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:id="@+id/live_list_items"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="98"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="horizontal"
            >
            <com.szreach.ybolotv.views.DateTimeTextView
                android:layout_marginLeft="@dimen/x240"
                android:textColor="#ffffff"
                android:letterSpacing="-0.06"
                android:textSize="@dimen/x8"
                android:typeface="monospace"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/live_list_right_title"
                android:text=""
                android:layout_marginLeft="@dimen/x10"
                android:layout_gravity="center_vertical"
                android:textColor="#ffffff"
                android:textSize="@dimen/x10"
                android:letterSpacing="-0.06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/live_list_right_time"
                android:text=""
                android:layout_marginLeft="@dimen/x10"
                android:layout_gravity="center_vertical"
                android:textColor="#ffffff"
                android:textSize="@dimen/x7"
                android:typeface="monospace"
                android:letterSpacing="-0.1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/live_list_count_icon"
                android:src="@drawable/icon_live_count"
                android:visibility="invisible"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x225"
                android:layout_width="@dimen/x8"
                android:layout_height="@dimen/x8"/>

            <TextView
                android:id="@+id/live_list_right_count"
                android:text=""
                android:layout_marginLeft="@dimen/x2"
                android:layout_gravity="center_vertical"
                android:textColor="#ffffff"
                android:textSize="@dimen/x7"
                android:typeface="monospace"
                android:letterSpacing="-0.05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="29"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:id="@+id/live_list_right_conn"
                android:layout_width="@dimen/x325"
                android:layout_height="@dimen/x180"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginTop="@dimen/x12"
                >
                <io.vov.vitamio.widget.VideoView
                    android:id="@+id/live_list_right_video"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
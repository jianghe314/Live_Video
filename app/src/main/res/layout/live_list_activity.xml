<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@drawable/page_bg"
       android:id="@+id/live_list_page"
       android:orientation="horizontal"
       >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="37"
        android:background="#061323"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/live_list_title"
                android:text="@string/live_list_title"
                android:textSize="33px"
                android:letterSpacing="-0.06"
                android:textColor="#ffffff"
                android:layout_gravity="bottom"
                android:layout_marginLeft="20px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/live_list_count"
                android:text="共计8场直播"
                android:textSize="18px"
                android:letterSpacing="-0.06"
                android:textColor="#0091ff"
                android:layout_marginLeft="10px"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="35"
            android:paddingTop="20px"
            android:orientation="vertical"
            >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:id="@+id/live_list_items"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="98"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="horizontal"
            >
            <com.szreach.ybolotvbox.views.DateTimeTextView
                android:layout_marginLeft="620px"
                android:textColor="#ffffff"
                android:letterSpacing="-0.06"
                android:textSize="18px"
                android:typeface="monospace"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/live_list_right_title"
                android:text="白山市市长对邮政业支持跨境电商发展提出具体要求"
                android:layout_marginLeft="40px"
                android:layout_gravity="center_vertical"
                android:textColor="#ffffff"
                android:textSize="27px"
                android:letterSpacing="-0.06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/live_list_right_time"
                android:text="2017/07/24 13:00-18:56"
                android:layout_marginLeft="40px"
                android:layout_gravity="center_vertical"
                android:textColor="#ffffff"
                android:textSize="18px"
                android:typeface="monospace"
                android:letterSpacing="-0.1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:src="@drawable/icon_live_count"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="582px"
                android:layout_width="22px"
                android:layout_height="22px"/>

            <TextView
                android:id="@+id/live_list_right_count"
                android:text="8606"
                android:layout_marginLeft="7px"
                android:layout_gravity="center_vertical"
                android:textColor="#ffffff"
                android:textSize="18px"
                android:typeface="monospace"
                android:letterSpacing="-0.05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="29"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:id="@+id/live_list_right_conn"
                android:layout_width="858px"
                android:layout_height="482px"
                android:layout_marginLeft="40px"
                android:layout_marginTop="14px"
                >
                <io.vov.vitamio.widget.VideoView
                    android:id="@+id/live_list_right_video"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@drawable/page_bg"
       android:id="@+id/news_list_page"
       android:orientation="vertical"
       >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/news_list_title"
            android:text="@string/news_list_title"
            android:textSize="@dimen/x12"
            android:letterSpacing="-0.06"
            android:textColor="#ffffff"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/news_list_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/x3"
            android:layout_marginLeft="@dimen/x20"
            android:letterSpacing="-0.01"
            android:text="共计0条新闻"
            android:textColor="#ffffff"
            android:textSize="@dimen/x7" />

        <com.szreach.ybolotv.views.DateTimeTextView
            android:layout_marginLeft="@dimen/x245"
            android:layout_marginBottom="@dimen/x3"
            android:textSize="@dimen/x8"
            android:textColor="#ffffff"
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="49"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:orientation="horizontal"
            android:layout_marginLeft="50px"
            >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/news_list_center_list"
                    app:flexWrap="wrap"
                    app:flexDirection="row"
                    android:paddingTop="50px"
                    android:paddingLeft="10px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </ScrollView>

            <com.szreach.ybolotv.views.MoveFrameLayout
                android:id="@+id/news_list_page_move"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
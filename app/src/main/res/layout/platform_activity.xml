<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@drawable/page_bg"
       android:orientation="horizontal"
       android:id="@+id/platform_page"
       >

    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:letterSpacing="-0.05"
                android:text="平台地址："
                android:textSize="@dimen/x8"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <EditText
                android:id="@+id/platform_address"
                android:textSize="@dimen/x8"
                android:background="#ffffff"
                android:maxLines="1"
                android:hint="http://192.168.0.1"
                android:padding="@dimen/x1"
                android:layout_width="@dimen/x100"
                android:layout_height="@dimen/x10"/>
            <TextView
                android:id="@+id/platform_save"
                android:padding="@dimen/x1"
                android:textColor="#ffffff"
                android:background="#00aaee"
                android:textSize="@dimen/x7"
                android:text="确  定"
                android:layout_width="match_parent"
                android:focusable="true"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
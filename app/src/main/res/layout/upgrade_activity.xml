<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/upgrade_page"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@drawable/page_bg"
      android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/x110"
                android:id="@+id/x"
                android:layout_height="@dimen/x70"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/upgrade_file"
                        android:layout_width="@dimen/x50"
                        android:layout_height="@dimen/y60"
                        android:background="@drawable/upgrade_local"
                        android:focusable="true"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="@dimen/x5"
                            android:gravity="center"
                            android:text="本地升级"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/x6" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/upgrade_check"
                        android:layout_width="@dimen/x50"
                        android:layout_height="@dimen/y60"
                        android:layout_marginLeft="@dimen/x5"
                        android:background="@drawable/upgrade_online"
                        android:focusable="true"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="@dimen/x5"
                            android:gravity="center"
                            android:text="在线升级"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/x6" />
                    </LinearLayout>

                    <com.szreach.ybolotv.views.MoveFrameLayout
                        android:id="@+id/upgrade_move_frame"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x10"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/upgrade_curr_version"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/x8"
                        android:gravity="center"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
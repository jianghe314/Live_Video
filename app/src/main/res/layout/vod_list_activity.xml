<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@drawable/page_bg"
       android:id="@+id/vod_list_page"
       android:orientation="horizontal"
       >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/vod_list_title"
                android:text="@string/vod_list_title"
                android:textSize="33.5px"
                android:letterSpacing="-0.06"
                android:textColor="#ffffff"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="37px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="69"
            android:orientation="vertical"
            >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:id="@+id/vod_list_groups"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="37px"
                    >

                </LinearLayout>
            </ScrollView>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="23"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:orientation="horizontal"
            android:layout_marginLeft="33.5px"
            >
            <TextView
                android:id="@+id/vod_list_count"
                android:text="共计0个视频"
                android:layout_gravity="bottom"
                android:textSize="15px"
                android:textColor="#ffffff"
                android:layout_marginBottom="8px"
                android:letterSpacing="-0.01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.szreach.ybolotv.views.DateTimeTextView
                android:layout_marginLeft="636.5px"
                android:layout_marginBottom="8px"
                android:layout_gravity="bottom"
                android:textSize="18px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="69"
            android:layout_marginLeft="33.5px"
            android:layout_marginTop="27px"
            android:orientation="horizontal"
            >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/vod_list_right_list"
                    app:flexWrap="wrap"
                    app:flexDirection="row"
                    android:paddingLeft="5px"
                    android:paddingRight="10px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </ScrollView>

            <com.szreach.ybolotv.views.MoveFrameLayout
                android:id="@+id/vod_list_page_move"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>